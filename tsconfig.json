{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES2015",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "@nuxt/types",
            "@nuxt/content",
            "@types/node",
            "@nuxtjs/color-mode",
        ]
    },
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist",
        "wordpress"
    ],
    "files": [
        "node_modules/@types/custom.d.ts"
    ]
}
